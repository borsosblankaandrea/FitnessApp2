@page "/login"
@using FitnessAppAPI.Services
@inject AuthenticationService AuthenticationService
@inject NavigationManager Navigation

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-3">
            <h3 class="text-center mb-4">Login</h3>
            <div class="form-group">
                <label for="email">Email:</label>
                <input id="email" class="form-control" @bind="email" />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input id="password" type="password" class="form-control" @bind="password" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary custom-button mt-4" @onclick="HandleLogin">Login</button>
            </div>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-info mt-3">@message</div>
            }
        </div>
    </div>
</div>

<style>
    .custom-button {
        display: inline-block;
        padding: 10px 20px;
        width: 100%; 
        background-color: #ff4500;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        border: none; 
        cursor: pointer;
    }

        .custom-button:hover {
            background-color: #e03e00;
        }
</style>

@code {
    private string email;
    private string password;
    string message;

    private async Task HandleLogin()
    {
        var result = await AuthenticationService.Login(email, password);
        if (result)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            message = "Helytelen jelszó vagy email.";
            email = "";
            password = "";
        }
    }
}
