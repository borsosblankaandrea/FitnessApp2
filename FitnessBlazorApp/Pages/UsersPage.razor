@page "/users"
@using FitnessAppAPI.Models
@using FitnessAppAPI.Services

@inject UsersService service

<h1>Kliensek</h1>

@if (users != null && users.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Név</th>
                <th>CNP</th>
                <th>Email</th>
                <th>Telefonszám</th>
                <th>Lakcím</th>
                <th>Jelszó</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.name</td>
                    <td>@user.CNP</td>
                    <td>@user.email</td>
                    <td>@user.phone</td>
                    <td>@user.address</td>
                    <td>@user.password</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading...</p>
}

@code {
    List<Users> users;

    protected override async Task OnInitializedAsync()
    {
        users = await service.GetAllEntries();
    }
}
